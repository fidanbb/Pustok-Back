@model ServiceVM


@{
    ViewData["Title"] = "Detail";
}

@section css {
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
}

<div class="container mt-5" style="margin-left:30px;">
    <div class="image mb-3">
       <i style="font-size:20px; color:#63ab00" class="@Model.IconName"></i>
    </div>
    <h2 class="mb-3">Title- @Model.Title</h2>
    <h3 class="mb-3">Description- @Model.Description</h3>
    <p class="mb-3"> CreatedDate - @Model.CreatedDate</p>

    <p class="mb-3"> UpdatedDate - @Model.UpdatedDate</p>



    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>


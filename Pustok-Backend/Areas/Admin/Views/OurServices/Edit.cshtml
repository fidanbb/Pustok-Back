@model ServiceEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5" style="margin-left:30px">
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">

        <div class="form-group my-3">
            <label asp-for="IconName">Enter here "i" tag from Font Awesome<</label>
            <input asp-for="IconName" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="IconName"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

  
 
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>





@section script {
    <partial name="_ValidationScriptsPartial" />
}


@model BlogCommentVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5 " style="margin-left:30px">



    <h3 class="mb-3">Full Name - @Model.Name @Model.Surname</h3>

    <p class="mb-3">Blog Title - @Model.BlogTitle</p>

    <p class="mb-3">Comment - @Model.Message</p>



    <p class="mb-3">Created Date - @Model.CreatedDate</p>



    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>
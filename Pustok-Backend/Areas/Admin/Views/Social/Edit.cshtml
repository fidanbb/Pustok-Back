@model SocialEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5" style="margin-left:30px">
    <form class="forms-sample" method="post" asp-action="Edit" >

        <div class="form-group my-3">
            <label asp-for="IconName">Enter here "i" tag from Font Awesome</label>
            <input asp-for="IconName" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="IconName"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Link">Link</label>
            <input asp-for="Link" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Link"></span>
        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>


@section script {
    <partial name="_ValidationScriptsPartial" />
}



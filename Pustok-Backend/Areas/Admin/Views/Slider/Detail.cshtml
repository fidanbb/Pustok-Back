@model SliderVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5 " style="margin-left:30px">

    <div style="width:400px; height:200px;" class="image">
        <img src="~/assets/images/@Model.Image" style="width:100%" />
    </div>

    <div class="slider-text mt-5">
        <h6 class="mt-3">Header - @Model.Header</h6>
        <h6 class="mt-3">Title - @Model.Title</h6>
        <p class="mt-3"> Description - @Model.Description</p>
        <p class="mt-3"> CreatedDate - @Model.CreatedDate</p>

        <p class="mt-3"> UpdatedDate - @Model.UpdatedDate</p>

        
    </div>

    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>
@model TestimonialVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5 " style="margin-left:30px">

    <div style="width:100px; height:100px"  class="image">
        <img style="width:100%" src="~/assets/images/@Model.Image" style="width:100%" />
    </div>

    <div class="text mt-5">
        <h6 class="mt-3">FullName - @Model.Name @Model.Surname</h6>
        <h6 class="mt-3">Review - @Model.Review</h6>
        <p class="mt-3"> CreatedDate - @Model.CreatedDate</p>



    </div>

    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>
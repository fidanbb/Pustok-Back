@model List<TestimonialVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="margin-left:30px">
<h1 class="text-center mt-3 mb-3">Testimonials</h1>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                   FullName
                </th>
                <th>
                  Review
                </th>
                
                <th>
                    CreatedDate
                </th>
                <th>
                    Operations
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="py-1">
                        <img src="~/assets/images/@item.Image" alt="image" />
                    </td>

                    <td class="py-1">
                        @item.Name @item.Surname
                    </td>



                    <td class="py-1">
                        @item.Review.Substring(0, (int)Math.Ceiling(item.Review.Length * 0.3))
                    </td>

                    <td>
                        @item.CreatedDate.ToString("MM/dd/yyyy")
                    </td>

                    <td>
                        <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

</div>


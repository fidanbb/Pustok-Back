@model AuthorCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5" style="margin-left:30px">
    <form class="forms-sample" method="post" asp-action="Create">

        <div class="form-group my-3">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>
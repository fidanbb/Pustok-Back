@model BlogDetailPageVM
@inject UserManager<AppUser> _userManager;

    

@{
    AppUser user = _userManager.Users.FirstOrDefault(u => u.UserName == User.Identity.Name);
    ViewData["Title"] = "Detail";
}

@section css {

    <link rel="stylesheet" href="~/assets/css/pages/blogdetail.css" />

}

<!-- Blog Detail Section Starts -->
<section id="blog-detail-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-4 mb-lg-0">
                <div class="blog-post">
                    <div class="blog-image">
                        <img src="~/assets/images/@Model.Blog.Image" alt="" />
                    </div>
                    <div class="blog-content">
                        <div class="blog-header">
                            <h3 class="blog-title">
                                @Model.Blog.Title
                            </h3>
                            <div class="post-detail">
                                <span class="date">
                                    <i class="fa-regular fa-calendar"></i>
                                    @Model.Blog.CreatedDate.Day @Model.Blog.CreatedDate.ToString("MMMM"), @Model.Blog.CreatedDate.Year
                                </span>
                                <span class="author">
                                    <i class="fa-regular fa-user"></i>
                                    By @Model.Blog.Author
                                </span>
                            </div>
                        </div>
                        <article class="blog-desc">
                            <p>
                                @Model.Blog.Description
                            </p>
                        </article>
                    </div>
                </div>
                <div class="blog-item">
                    <div class="post-tags">
                        <strong>Tags:</strong>
                        @foreach (var item in Model.Blog.Tags)
                        {
                            <a href="">@item.Name</a>
                        }
                       
                      
                    </div>
                    <div class="social-btns">
                   @foreach (var item in Model.Socials)
                        {
                            <a href="@item.Link">
                                <i class="@item.IconName"></i>
                            </a>
                        }
                      
                    </div>
                </div>
                @if (Model.RelatedBlogs.Count()!=0)
                {
                    <div class="related-blogs">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4 class="widget-title">Related Posts</h4>
                            </div>
                            @foreach (var item in Model.RelatedBlogs)
                            {
                                <div class="col-lg-6 col-md-6 mb-4 mb-md-0">
                                    <div class="blog">
                                        <div class="blog-image">
                                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                                <img src="~/assets/images/@item.Image" alt="" />
                                            </a>
                                        </div>
                                        <div class="blog-content">
                                            <h5 class="title">
                                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                                    @item.Title.Substring(0, (int)Math.Ceiling((item.Title.Length * 0.4)))
                                                </a>
                                            </h5>
                                            <p class="desc">
                                                @item.Description.Substring(0, (int)Math.Ceiling((item.Description.Length * 0.09)))
                                            </p>
                                            <div class="blog-author-date">
                                                <span class="date">
                                                    <i class="fa-regular fa-calendar"></i>
                                                    @item.CreatedDate.Day @item.CreatedDate.ToString("MMMM"), @item.CreatedDate.Year
                                                </span>
                                                <span class="author">
                                                    <i class="fa-regular fa-user"></i>
                                                    By @item.Author
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                }
             

                <div class="post-comments">
                    <h4 class="widget-title">@Model.Blog.Comments.Count() Comment</h4>
                  @foreach (var item in Model.Blog.Comments.OrderByDescending(m=>m.CreatedDate).Take(3))
                    {
                        <div class="single-comment">
                            <div class="comment-image">
                                @if (_userManager.Users.FirstOrDefault(m=>m.Id==item.AppUserId).Image is null)
                                {
                                    <img src="~/assets/images/author-logo.webp" alt="" />

                                }
                                else
                                {
                                    <img src="~/assets/images/@_userManager.Users.FirstOrDefault(m=>m.Id==item.AppUserId).Image" alt="" />
                                }
                            </div>
                            <div class="text">
                                <p class="author">
                                    @_userManager.Users.FirstOrDefault(m => m.Id == item.AppUserId).Name @_userManager.Users.FirstOrDefault(m => m.Id == item.AppUserId).Surname
                                </p>
                                <p class=".desc">
                                   @item.Message
                                </p>
                                <a href="">
                                    <i class="fa fa-reply"></i>
                                    Reply
                                </a>
                            </div>
                        </div>
                    }
                       

          
                

                </div>

                <div class="leave-reply">
                    <h4 class="widget-title">Leave a Reply</h4>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="reply-form">
                            <form method="post" asp-controller="Blog" asp-action="PostComment" asp-route-userId="@user.Id" asp-route-blogId="@Model.Blog.Id">
                                <input type="text"
                                       value="@user.Name @user.Surname"
                                       readonly
                                       class="form-control"
                                       style="background-color:#fff!important"
                                       placeholder="Your Name" />
                                <input type="email"
                                    value="@user.Email"
                                    readonly
                                       style="background-color:#fff!important"
                                       class="form-control"
                                       placeholder="Your Email" />
                                <textarea class="form-control"
                                         asp-for="@Model.BlogComment.Message"
                                          cols="40"
                                          rows="5"
                                          placeholder="Your Message"></textarea>
                                 <span class="text-danger" asp-validation-for="@Model.BlogComment.Message"></span>
                                <button class="btn" type="submit">Submit</button>
                            </form>
                        </div>  
                    }
                    else
                    {

                        <div class="reply-form">
                            <form >
                                <input type="text"
                                     
                                       class="form-control"
                                       placeholder="Your Name" />
                                <input type="email"
                                  
                                       class="form-control"
                                       placeholder="Your Email" />
                                <textarea class="form-control"
                                         
                                          cols="40"
                                          rows="5"
                                          placeholder="Your Message"></textarea>
                                <a asp-controller="Account" asp-action="Login" class="btn" >Submit</a>
                            </form>
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-4">
                <div class="left-side-blog">
                    <div class="widget categories-widget">
                        <h4 class="widget-title">Category</h4>
                        <ul>
                            <li class="cat-item">
                                <a href="">All</a>
                                (3)
                            </li>
                            <li class="cat-item">
                                <a href="">Arts & Photography</a>
                                (3)
                            </li>
                            <li class="cat-item">
                                <a href="">Biographies</a>
                                (3)
                            </li>
                            <li class="cat-item">
                                <a href="">Business & Money</a>
                                (3)
                            </li>
                            <li class="cat-item">
                                <a href="">Children's Book</a>
                                (3)
                            </li>
                            <li class="cat-item">
                                <a href="">Cookbooks</a>
                                (3)
                            </li>
                            <li class="cat-item">
                                <a href="">Comics</a>
                                (3)
                            </li>
                            <li class="cat-item">
                                <a href="">Education</a>
                                (3)
                            </li>
                        </ul>
                    </div>
                    <div class="widget recent-posts">
                        <h4 class="widget-title">Recent Posts</h4>
                        <div class="posts">
                        @foreach (var item in Model.LatestBlogs)
                            {
                                <div class="post">
                                    <div class="image">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                            <img src="~/assets/images/@item.Image" alt="" />
                                        </a>
                                    </div>
                                    <div class="content">
                                        <h6 class="title">
                                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                                @item.Title.Substring(0, (int)Math.Ceiling((item.Title.Length * 0.4)))
                                            </a>
                                        </h6>
                                        <p class="date">@item.CreatedDate.Day @item.CreatedDate.ToString("MMMM"), @item.CreatedDate.Year</p>
                                    </div>
                                </div>
                            }
                        
                        </div>
                    </div>

                    <div class="widget archives-widget">
                        <h4 class="widget-title">Archives</h4>
                        <ul>
                           @foreach (var item in Model.Dates)
                            {
                                <li class="arc-item" data-id="@item.Month">
                                    <a asp-controller="Blog" asp-action="Index" asp-route-month="@item.Month">
                                        @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.Month)</a>
                                    (@item.Count)
                                </li>
                            }
                          
                        </ul>
                    </div>

                    <div class="widget tags">
                        <h4 class="widget-title">Tags</h4>
                        <div class="all-tags">
                          @foreach (var item in Model.Tags)
                            {
                                <a asp-controller="Blog" asp-action="Index" asp-route-tagId="@item.Id">@item.Name</a>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Detail Section Ends -->


@section script {

    <script src="~/assets/js/blogdetail.js"></script>

}


@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}


@section css {

    <link rel="stylesheet" href="~/assets/css/pages/resetpassword.css" />

}

<section id="reset-section">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-5 mb-3 mb-lg-0">
                <div class="reset-form">
                    <h4>Reset Password</h4>
                    <div class="text-danger mb-2" asp-validation-summary="All"></div>
                    <form method="post" asp-controller="Account" asp-action="ResetPassword">
                        <div class="row">

                            <div class="col-lg-12 mb-3">
                                <div class="password">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control"
                                           type="password"
                                           placeholder="Enter your password" />
                                    <i class="fa-regular fa-eye eyes"></i>
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                </div>
                            </div>

                            <div class="col-lg-12 mb-3">
                                <div class="password">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" class="form-control"
                                           type="password"
                                           placeholder="Confirm your password" />
                                    <i class="fa-regular fa-eye eyes"></i>
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>

                            <input type="hidden" asp-for="Token" value="@Model.Token" />
                            <input type="hidden" asp-for="UserId" value="@Model.UserId" />

                            <div class="col-md-12 mb-3">
                                <div class="reg-btn">
                                    <button type="submit" class="btn">Reset</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section script {

    <script src="~/assets/js/resetpassword.js"></script>
    <partial name="_ValidationScriptsPartial" />

}




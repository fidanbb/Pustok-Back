@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

@section css {
  
    <link rel="stylesheet" href="~/assets/css/pages/register.css" />

}

<section id="register-section">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-3 mb-lg-0">
                <div class="register-form">
                    <h4>Register</h4>
                    <div class="text-danger" style=" text-align: left; position: relative; right: 0px; top: -4px;" asp-validation-summary="All"></div>
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <div class="row">
                            <div class="col-lg-6 mb-20">
                                <div class="name">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" class="form-control"
                                           type="text"
                                           placeholder="Enter your name" />
                                    <span class="text-danger" asp-validation-for="Name"></span>

                                </div>
                            </div>
                            <div class="col-lg-6 mb-20">
                                <div class="surname">
                                    <label asp-for="Surname">Surname</label>
                                    <input asp-for="Surname" class="form-control"
                                           type="text"
                                           placeholder="Enter your surname" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="col-lg-12 mb-20">
                                <div class="email">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="form-control"
                                           type="email"
                                           placeholder="Enter your email address here" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-lg-12 mb-20">
                                <div class="email">
                                    <label asp-for="Username">Username</label>
                                    <input asp-for="Username" class="form-control"
                                           type="text"
                                           placeholder="Enter your username" />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-20">
                                <div class="password">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control"
                                           type="password"
                                           placeholder="Enter your password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-20">
                                <div class="conf-password">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" class="form-control"
                                           type="password"
                                           placeholder="Repeat your password " />

                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                            <div class="col-md-12 mb-3">
                                <div class="reg-btn">
                                    <button type="submit" class="btn">Register</button>
                                </div>
                            </div>

                            <div class="col-lg-12 mb-3">
                                <div class="account">
                                    <p>
                                        Already have an account?
                                        <a asp-action="Login">Login</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section script {

    <script src="~/assets/js/register.js"></script>
    <partial name="_ValidationScriptsPartial" />

}